{
	"compilerOptions": {
		"allowJs": true,
		"outDir": "./build",
		"baseUrl": ".",
		"removeComments": true,
		// "sourceMap": true,
		"incremental": true,
		/**/
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "Bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"moduleDetection": "auto",
		"esModuleInterop": true,
		"noEmit": true,
		"jsx": "react-jsx",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,

		/*Paths*/
		"paths": {
			"@/*": ["./*"],
			"@/pages/*": ["./pages/*"],
			"@/src/*": ["./src/*"]
		}
	},
	"include": [
		"codegen.ts",
		"src",
		"pages",
		"shared",
		"widgets",
		"vite.config.ts",
		"@types"
	],
	"exclude": ["node_modules", ".yarn"]
}
